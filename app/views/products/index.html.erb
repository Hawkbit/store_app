<% provide(:title, "Products") %>
<h1>Lugnuts Product List</h1>
<table>
  <tr>
    <th>Product Name</th>
    <th>Product Line</th>
    <th>Quantity</th>
    <th>MSRP</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      
      <td><%= product.productName %></td>
      <td><%= product.productLine %></td>
      <td><%= product.quantityInStock %></td>
      <td><%= number_to_currency(product.MSRP) %></td>
      <td><%= button_to 'View', product_path(product) %></td>
      <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
    </tr>
  <% end %>
</table>


